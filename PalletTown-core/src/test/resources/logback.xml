<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d %-5level %logger{0}: %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="CLI" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%msg%n</pattern>
		</encoder>
	</appender>

	<logger name="com.pallettown.core.PalletTownCli" level="DEBUG" additivity="false">
		<appender-ref ref="CLI" />
	</logger>

	<logger name="com.pallettown.core" level="DEBUG" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>

	<root level="INFO" additivity="false">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>